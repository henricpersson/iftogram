<form class="well form-search" action="<%= search_result_path %>">
  <div class="input-append">
    <input type="text" class="input-large search-query" name="q" value="<%= @query %>">
    <button class="btn btn-primary" type="submit"><i class="icon-search icon-white"></i> Find users!</button>
  </div>
</form>


<div class="search-results">
  <% @people.each do |person| -%>
    <a href="<%= profile_path(person["id"]) %>">
      <div class="row-fluid item">
        <div class="span3">
          <img src="<%= person["profile_picture"] %>">
        </div>
        <div class="span9">
          <h2><%= person["username"] %></h2>
          <h3><%= person["full_name"] %></h3>
          <p><%= person["bio"] %></p>
        </div>
      </div>
    </a>
    <hr></hr>
  <% end -%>
  test!
</div>

